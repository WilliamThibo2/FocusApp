<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/styles.css">
  <title>Focus Helper</title>
</head>
<body>
  <h1>Focus Helper</h1>
  <form action="/add" method="POST">
    <input type="text" name="title" placeholder="Nouvelle tÃ¢che..." required>
    <button type="submit">Ajouter</button>
  </form>

  <ul>
    <% tasks.forEach(task => { %>
      <li>
        <%= task.title %>
        <% if (!task.completed) { %>
          <form action="/complete/<%= task._id %>" method="POST" style="display:inline;">
            <button type="submit">Terminer</button>
          </form>
        <% } %>
        <form action="/delete/<%= task._id %>" method="POST" style="display:inline;">
          <button type="submit">Supprimer</button>
        </form>
      </li>
    <% }); %>
  </ul>
</body>
</html>
